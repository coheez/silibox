arch: "{{.Arch}}"
images:
  - location: "{{.ImageURL}}"
    arch: "{{.Arch}}"
{{- if .ImageDigest }}
    digest: "{{.ImageDigest}}"
{{- end }}
vmType: "vz"
cpus: {{.CPUs}}
memory: "{{.Memory}}"
disk: "{{.Disk}}"
mounts:
- location: "~"
  writable: false
  virtiofs: {}
containerd:
  system: false
provision:
  - mode: system
    script: |
      #!/bin/sh
      set -eux
      apt-get update
      apt-get install -y podman fuse-overlayfs ca-certificates curl gnupg
video:
  display: "none"
ssh:
  loadDotSSHPubKeys: true